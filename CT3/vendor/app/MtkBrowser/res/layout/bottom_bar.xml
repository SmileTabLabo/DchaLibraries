<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/bottombar" android:background="@color/bottomBar_bg" android:layout_width="match_parent" android:layout_height="@dimen/bottom_bar_height" android:layout_alignParentBottom="true">
    <ImageView android:id="@+id/back" android:layout_width="@dimen/bottom_bar_button_width" android:layout_height="match_parent" android:src="@drawable/ic_back_selector" android:scaleType="center" android:layout_weight="1" style="@style/HoloButton"/>
    <ImageView android:id="@+id/forward" android:layout_width="@dimen/bottom_bar_button_width" android:layout_height="match_parent" android:src="@drawable/ic_forward_selector" android:scaleType="center" android:layout_weight="1" style="@style/HoloButton"/>
    <RelativeLayout android:layout_width="@dimen/bottom_bar_button_width" android:layout_height="match_parent" android:scaleType="center" android:layout_weight="1">
        <ImageView android:id="@+id/tabs" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/ic_tabs" android:scaleType="center" android:layout_centerInParent="true" style="@style/HoloButton"/>
        <TextView android:textAppearance="?android:attr/textAppearanceSmall" android:textSize="15sp" android:textStyle="bold" android:textColor="#ff000000" android:layout_gravity="center" android:id="@+id/tabcount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="center" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ImageView android:id="@+id/bookmarks" android:layout_width="@dimen/bottom_bar_button_width" android:layout_height="match_parent" android:src="@drawable/ic_bookmarks" android:scaleType="center" android:layout_weight="1" style="@style/HoloButton"/>
</LinearLayout>
