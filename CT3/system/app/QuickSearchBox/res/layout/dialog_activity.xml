<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/parentPanel" android:paddingLeft="3dp" android:paddingTop="9dp" android:paddingRight="1dp" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/topPanel" android:background="@drawable/popup_top_dark" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="54dp">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/titlePanel" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="6dp" android:layout_marginRight="10dp" android:layout_marginBottom="9dp">
            <ImageView android:layout_gravity="top" android:id="@+id/icon" android:paddingTop="6dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_dialog_menu_generic"/>
            <TextView android:ellipsize="end" android:id="@+id/alertTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="3" android:singleLine="false" style="?android:attr/textAppearanceLarge"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout android:id="@+id/content" android:background="@drawable/popup_bottom_bright" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
