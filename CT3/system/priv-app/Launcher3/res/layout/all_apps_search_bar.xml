<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/all_apps_search_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:layout_gravity="start|center_vertical" android:orientation="horizontal" android:id="@+id/search_container" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="@dimen/all_apps_search_bar_height">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/dismiss_search_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:src="@drawable/ic_arrow_back_grey" android:contentDescription="@string/all_apps_button_label"/>
        <com.android.launcher3.ExtendedEditText android:textSize="16sp" android:textColor="#4c4c4c" android:textColorHint="#9c9c9c" android:gravity="center" android:id="@+id/search_box_input" android:background="@android:color/transparent" android:paddingLeft="8dp" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="@string/all_apps_search_bar_hint" android:maxLines="1" android:scrollHorizontally="true" android:singleLine="true" android:inputType="textNoSuggestions" android:imeOptions="flagNoExtractUi|actionSearch"/>
    </LinearLayout>
    <ImageView android:layout_gravity="end|center_vertical" android:id="@+id/search_button" android:layout_width="wrap_content" android:layout_height="@dimen/all_apps_search_bar_height" android:layout_marginRight="16dp" android:src="@drawable/ic_search_grey" android:contentDescription="@string/all_apps_search_bar_hint"/>
</FrameLayout>
