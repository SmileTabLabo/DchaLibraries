<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SearchButton" parent="">
    </style>
    <style name="DropTargetButtonContainer" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="DropTargetButton" parent="@style/DropTargetButtonBase">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">56dp</item>
        <item name="android:paddingRight">56dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:shadowColor">#393939</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:drawablePadding">7.5dp</item>
    </style>
    <style name="BaseWallpaperTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowActionModeOverlay">true</item>
    </style>
</resources>
