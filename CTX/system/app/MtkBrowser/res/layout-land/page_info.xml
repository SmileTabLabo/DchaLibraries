<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="14sp" android:textStyle="bold" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="12dp" android:layout_marginRight="20dp" android:layout_marginBottom="12dp"/>
        <TableLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:shrinkColumns="1">
            <TableRow>
                <TextView android:textSize="14sp" android:gravity="left" android:id="@+id/address_header" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:text="@string/page_info_address"/>
                <TextView android:textSize="14sp" android:gravity="left" android:id="@+id/address" android:layout_marginLeft="10dp" android:layout_marginRight="20dp" android:layout_marginBottom="12dp"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>
