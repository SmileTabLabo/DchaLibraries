<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:padding="@dimen/combo_horizontalSpacing" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <ImageView android:id="@+id/thumb" android:background="@drawable/border_thumb_bookmarks_widget_holo" android:layout_width="@dimen/bookmarkThumbnailWidth" android:layout_height="@dimen/bookmarkThumbnailHeight" android:src="@drawable/thumbnail_bookmarks_widget_no_bookmark_holo" android:scaleType="centerCrop" android:cropToPadding="true"/>
