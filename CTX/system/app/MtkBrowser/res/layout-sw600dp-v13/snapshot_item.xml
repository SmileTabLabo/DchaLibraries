    <TextView android:textSize="12sp" android:typeface="sans" android:textColor="#aaaaaa" android:gravity="center_vertical" android:id="@+id/size" android:paddingRight="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignTop="@+id/divider" android:layout_alignRight="@+id/thumb" android:layout_alignBottom="@+id/divider"/>
</RelativeLayout>
