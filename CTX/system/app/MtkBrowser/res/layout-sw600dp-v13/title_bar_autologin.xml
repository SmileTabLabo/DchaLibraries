<?xml version="1.0" encoding="utf-8"?>
<com.android.browser.AutologinBar xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:background="#fbf0a0" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:textColor="@android:color/primary_text_light" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/autologin_bar_text"/>
    <Spinner android:id="@+id/autologin_account" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@android:style/Widget.Holo.Light.Spinner"/>
    <Button android:id="@+id/autologin_login" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:text="@string/autologin_bar_login_text" style="@android:style/Widget.Holo.Light.Button"/>
    <ProgressBar android:id="@+id/autologin_progress" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminateOnly="true"/>
    <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:textColor="#dd6826" android:id="@+id/autologin_error" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/autologin_bar_error"/>
    <View android:layout_width="2dp" android:layout_height="match_parent" android:layout_weight="1"/>
    <ImageButton android:id="@+id/autologin_close" android:background="@null" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@android:drawable/btn_check_on_holo_light"/>
</com.android.browser.AutologinBar>
