<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:padding="0dp" android:drawingCacheQuality="auto" android:layout_width="match_parent" android:layout_height="?android:attr/listPreferredItemHeight">
    <ImageView android:id="@+id/icon" android:background="@drawable/bookmark_list_favicon_bg" android:padding="2dp" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="18dp" android:layout_marginRight="18dp" android:layout_centerVertical="true"/>
    <LinearLayout android:gravity="center" android:id="@+id/features" android:padding="0dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="2dp" android:layout_alignParentTop="true" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true">
        <ImageView android:id="@+id/location_icon" android:padding="2dp" android:layout_width="32dp" android:layout_height="32dp"/>
        <ImageView android:id="@+id/usage_icon" android:padding="2dp" android:layout_width="32dp" android:layout_height="32dp"/>
