<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BrowserTheme" parent="@android:style/Theme.Holo">
        <item name="android:colorBackground">#ffffffff</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:textColor">@drawable/ctx_menu_custom_color</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:actionBarSize">56dp</item>
    </style>
    <style name="AddBookMarkDialogWhenLarge" parent="@android:style/Theme.Material.Light.DialogWhenLarge">
        <item name="android:windowActionBar">true</item>
        <item name="android:dividerVertical">@android:drawable/icon_highlight_rectangle</item>
    </style>
    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/bg_browsertabs</item>
        <item name="android:displayOptions">none</item>
    </style>
    <style name="Suggestions" parent="@android:style/Widget.Holo.AutoCompleteTextView">
    </style>
    <style name="ShortcutTheme" parent="@android:style/Theme.Material.DialogWhenLarge">
        <item name="android:dividerVertical">@android:drawable/icon_highlight_rectangle</item>
    </style>
    <style name="ComboTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarTabTextStyle">@style/BrowserComboActionBar</item>
    </style>
    <style name="BrowserComboActionBar" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textSize">18sp</item>
    </style>
</resources>
